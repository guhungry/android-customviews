<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.guhungry.viewsexample">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".LoadMoreAdapterActivity"
            android:label="@string/activity_load_more_adapter"
            android:parentActivityName=".MainActivity" />
        <activity android:name=".VerticalLinearSpacingActivity"
            android:label="@string/activity_vertical_linear_spacing_decorator"
            android:parentActivityName=".MainActivity" />
        <activity android:name=".GridSpacingActivity"
            android:label="@string/activity_grid_spacing_decorator"
            android:parentActivityName=".MainActivity" />
    </application>

</manifest>